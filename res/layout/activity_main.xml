<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

		<!-- 标题栏 -->
 		<include  layout="@layout/title"/>
 	 	<!-- 内容区域 -->
 	 	<FrameLayout 
 	 	    android:id="@+id/fl_main"
 	 	    android:layout_weight="1"
 	 	    android:layout_width="match_parent"
 	 	    android:layout_height="0dp"
 	 	    />
  
  	 	<!-- 底部导航栏 -->
 
 		<RadioGroup 
 		    android:id="@+id/rg"
 		    android:background="#555"
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:gravity="center_vertical"
 		    android:orientation="horizontal"
 		    >
 		    
 		    <RadioButton 
 		        android:id="@+id/rb_video"
 		        android:drawableTop="@drawable/rb_video_draw_selector"
 		        android:text="本地视频"
 		      	style="@style/rb_style"
 		        />
 		     <RadioButton 
 		        android:id="@+id/rb_audio"
 		        android:drawableTop="@drawable/rb_audio_draw_selector"
 		        android:text="本地音乐"
 		      	style="@style/rb_style"
 		        />
 		      <RadioButton 
 		        android:id="@+id/rb_net_video"
 		        android:drawableTop="@drawable/rb_net_video_draw_selector"
 		        android:text="网络视频"
 		      	style="@style/rb_style"
 		        />
 		       <RadioButton 
 		        android:id="@+id/rb_net_audio"
 		        android:drawableTop="@drawable/rb_net_audio_draw_selector"
 		        android:text="网络音乐"
 		      	style="@style/rb_style"
 		        />
 		</RadioGroup>
</LinearLayout>
